<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ml_kolkokrzyzyk.Start">

    <StackLayout VerticalOptions="Center" Padding="10" Margin="0,0,0,200">
        <Label Text="Papier Kamień Nożyce" HorizontalTextAlignment="Center" FontSize="30" Margin="0,0,0,80"/>
        <Entry Placeholder="Nazwa użytkownika" HorizontalTextAlignment="Center" x:Name="uname"/>
        <Button Text="Rozpocznij" Margin="0,20,0,0" x:Name="start" Clicked="start_Clicked"/>
    </StackLayout>

</ContentPage>
